<!DOCTYPE html>
<html lang="en">
<head>
    <style>
        /* General Body Styling */
body {
    font-family: 'Arial', sans-serif;
    background: linear-gradient(135deg, #74ebd5 0%, #ACB6E5 100%);
    margin: 0;
    padding: 20px;
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100vh;
}

.container {
    background-color: #fff;
    padding: 40px;
    border-radius: 15px;
    box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
    max-width: 600px;
    width: 100%;
    text-align: center;
}

/* Styling for Header */
h1 {
    font-size: 32px;
    color: #333;
    margin-bottom: 20px;
    font-weight: bold;
}

/* Link to Add New Expense */
a {
    display: inline-block;
    margin: 10px 0 20px;
    padding: 10px 20px;
    background-color: #5CDB95;
    color: white;
    text-decoration: none;
    border-radius: 5px;
    transition: background-color 0.3s ease;
}

a:hover {
    background-color: #379683;
}

/* List Styling */
ul {
    list-style-type: none;
    padding: 0;
    margin: 0;
}

/* Styling for Each Expense Item */
li {
    background-color: #f7f7f7;
    margin: 15px 0;
    padding: 15px;
    border-radius: 10px;
    box-shadow: 0 5px 10px rgba(0, 0, 0, 0.1);
    display: flex;
    justify-content: space-between;
    align-items: center;
    transition: transform 0.2s ease;
}

li:hover {
    transform: translateY(-5px);
}

li span {
    display: inline-block;
    font-size: 16px;
    color: #333;
    margin-right: 15px;
}

/* Edit and Delete Buttons Styling */
li a {
    background-color: #ff6b6b;
    color: white;
    text-decoration: none;
    padding: 5px 10px;
    border-radius: 5px;
    transition: background-color 0.3s ease;
}

li a:hover {
    background-color: #ff4757;
}

/* Delete Button Styling */
form button {
    background-color: #ff4757;
    color: white;
    border: none;
    padding: 5px 10px;
    border-radius: 5px;
    cursor: pointer;
    transition: background-color 0.3s ease;
}

form button:hover {
    background-color: #ff2e2e;
}

/* Responsive Design for Mobile */
@media (max-width: 600px) {
    .container {
        padding: 20px;
    }

    li {
        flex-direction: column;
        text-align: left;
    }

    li span {
        margin-right: 0;
        margin-bottom: 10px;
    }

    li a, form button {
        width: 100%;
        margin-bottom: 10px;
    }
}

    </style>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Expenses</title>
    <link rel="stylesheet" href="styles.css">
</head>
<body>
    <div class="container">
        <h1> All Expenses </h1>
        <a href="/expenses/new">Add New Expense</a>
        <ul>
            <% expenses.forEach(expense => { %>
                <li>
                    <span><%= expense.title %></span> 
                    <span>$<%= expense.amount %></span>
                    <span>Category: <%= expense.category %></span>
                    <div>
                        <a href="/expenses/<%= expense._id %>/edit">Edit</a>
                        <form action="/expenses/<%= expense._id %>/delete?_method=DELETE" method="POST" style="display:inline;">
                            <button type="submit">Delete</button>
                        </form>
                    </div>
                </li>
            <% }) %>
        </ul>
    </div>
</body>
</html>
